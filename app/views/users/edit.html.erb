<h1>My Info</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.text_field :email %>
    &lt;
    <%= f.label :email %>
  </p>
  <p>
    <%= f.text_field :first_name %>
    &lt;
    <%= f.label :first_name %>
  </p>
  <p>
    <%= f.text_field :last_name %>
    &lt;
    <%= f.label :last_name %>
  </p>
  <p>
    <%= f.date_select :birth_date, :use_month_numbers => true, :start_year => 1900, :end_year => Time.now.year %>
    &lt;
    <%= f.label :birth_date %>
  </p>
  <p>
    <%= f.text_field :location %>
    &lt;
    <%= f.label :location %>
  </p>
  <p>
    <%= f.password_field :password, :value => "" %>
    <span style="color:red;">
      &lt;
      <%= f.label :password %> (* Required)
    </span>
  </p>
  <p>
    <%= button_to_function "Update", "YamTesto.submitUpdateForm(this)" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
