%h1 Account Activated!
%h2 Please fill these out

-form_for(@user) do |f|
  = f.error_messages
  %p
    = f.label :first_name
    = f.text_field :first_name
  %p
    = f.label :last_name
    = f.text_field :last_name
  %p
    = f.label :password
    = f.password_field :password
  %p
    = f.submit 'Update'

